 <div class="modal-header">
                <h4 class="modal-title">New Contact</h4>
                <button onclick="hideView('myModal')" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">                    
                    <div class="text-danger">@ViewBag.Message</div>                   
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-sort-alpha-down" style="color:#17a2b8"></i></span>
                        </div>
                        <input type="text" class="form-control" required placeholder="First Name" />
                    </div>
                     <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-sort-alpha-down" style="color:#17a2b8"></i></span>
                        </div>
                        <input type="text" class="form-control" required placeholder="Last Name" />
                    </div>
                     <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-phone" style="color:#17a2b8"></i></span>
                        </div>
                        <input type="text" class="form-control" required placeholder="Phone Number" />
                    </div>
                     <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope" style="color:#17a2b8"></i></span>
                        </div>
                        <input type="email" class="form-control"  placeholder="Email" />
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-users" style="color:#17a2b8"></i></span>
                        </div>
                        <select class="form-control" required>
                            <option selected value="">Select List</option>
                            <option selected value="">Corona Notification</option>
                            <option selected value="">Exam Notification</option>
                        </select>
                    </div>
                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar-check" style="color:#17a2b8"></i></span>
                        </div>
                        <input type="date" class="form-control"  placeholder="Date of birth" />
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" onclick="hideView('myModal')" class="btn btn-info"><i class="fa fa-plus"></i> Add</button>
                </div>
            </form>            