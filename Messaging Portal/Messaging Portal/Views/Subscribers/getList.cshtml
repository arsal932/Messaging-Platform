@model IEnumerable<Messaging_Portal.Models.TopicsViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table id="example1" class="table table-bordered ">
    <thead class="table-avatar" style="color:#656565;text-align:center">
        <tr>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-sort-numeric-down"></i> #</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-university"></i> Name</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-calendar-check"></i> Creation Date</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-users"></i> Contacts</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-check"></i> Active</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-times"></i> Invalid</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-times"></i> Opt-Outs</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-check"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @(i + 1)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.TotalContacts)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Invalid)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Opt_Outs)
                </td>
                <td class="project-actions text-right">
                    <button class="btn btn-outline-success btn-sm">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </button>
                    <button class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </button>
                </td>
            </tr>
            i += 1;
        }
    </tbody>
    <tfoot>
        <tr>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-sort-numeric-down"></i> #</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-university"></i> Name</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-calendar-check"></i> Creation Date</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-users"></i> Contacts</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-check"></i> Active</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-times"></i> Invalid</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-times"></i> Opt-Outs</th>
            <th style="font-weight:400;text-align:center"><i style="color:#17a2b8" class="fa fa-check"></i> Actions</th>
        </tr>
    </tfoot>
</table>
<script>
    $(function() {       
       
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": [
                {
                    extend: 'copy',
                    title: 'List',
                    text: window.copyButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2,3,4,5,6]
                    }
                },
                {
                    extend: 'csv',
                    title: 'List',
                    text: window.csvButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2,3,4,5,6]
                    }
                },
                {
                    extend: 'excel',
                    title: 'List',
                    text: window.excelButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2,3,4,5,6]
                    }
                },
                {
                    extend: 'pdf',
                    title: 'List',
                    text: window.pdfButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2,3,4,5,6]
                    }
                },
                {
                    extend: 'print',
                    title: 'List',
                    text: window.printButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2,3,4,5,6]
                    }
                },
                {
                    extend: 'colvis',
                    title: 'List',
                    text: window.colvisButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2,3,4,5,6]
                    }
                },
            ]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    });
</script>