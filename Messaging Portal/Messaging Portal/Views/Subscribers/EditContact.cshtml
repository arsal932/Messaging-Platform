<div class="modal-header">
    <h4 class="modal-title">Edit Contact</h4>
    <button onclick="hideView('Modal-xl')" type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="EditContact" method="post">
    <div class="modal-body">
        <div class="text-danger">@ViewBag.Message</div>
        <label>Personal Details</label>
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-sort-alpha-down" style="color:#17a2b8"></i></span>
                    </div>
                    <input asp-for="FirstName" type="text" class="form-control" required placeholder="First Name" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-sort-alpha-down" style="color:#17a2b8"></i></span>
                    </div>
                    <input asp-for="LastName" type="text" class="form-control" required placeholder="Last Name" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-phone" style="color:#17a2b8"></i></span>
                    </div>
                    <input asp-for="Phone" type="text" class="form-control" required placeholder="Phone Number" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope" style="color:#17a2b8"></i></span>
                    </div>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-address-card" style="color:#17a2b8"></i></span>
                    </div>
                    <input asp-for="Address" type="text" class="form-control" placeholder="Address" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-calendar-check" style="color:#17a2b8"></i></span>
                    </div>
                    <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of birth" />
                </div>
            </div>
        </div>

        <label>Attach to subsribers list</label>
        <label class="checkBox_container">
            Select All
            <input type="checkbox">
            <span class="checkmark"></span>
        </label><br />
        @* <div class="input-group mb-3">     *@
        @for (int i = 0; i < 20; i++)
        {
            <label class="checkBox_container">
                Subscribers # @i
                <input checked type="checkbox">
                <span class="checkmark"></span>
            </label>
        }
        @* </div>*@<br />
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" onclick="hideView('Modal-xl')" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" onclick="hideView('Modal-xl')" class="btn btn-info"><i class="fa fa-sync"></i> Update</button>
    </div>
</form>            