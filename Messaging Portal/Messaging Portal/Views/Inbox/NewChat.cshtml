 <div class="modal-header">
                <h4 class="modal-title">New Chat</h4>
                <button onclick="hideView('myModal')" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">                    
                    <div class="text-danger">@ViewBag.Message</div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user" style="color:#17a2b8"></i></span>
                        </div>
                        <select class="form-control" required>
                            <option selected value="">Select Contact</option>
                            <option selected value="">Alexandar (+92234234234234)</option>
                            <option selected value="">Alexa (+92284274534124)</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope" style="color:#17a2b8"></i></span>
                        </div>
                        <input type="text" class="form-control" required placeholder="Message" />
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" onclick="hideView('myModal')" class="btn btn-info"><i class="fa fa-send"></i> Send</button>
                </div>
            </form>            