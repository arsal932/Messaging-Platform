@model IEnumerable<Messaging_Portal.Models.TriggerViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table id="example2" class="table table-bordered ">
    <thead class="table-avatar" style="color:#656565;text-align:center">
        <tr>
            <th><i class="icon-color fa fa-sort-numeric-down"></i> #</th>
            <th><i class="icon-color fa fa-sort-alpha-down"></i> Name</th>
            <th><i class="icon-color fa fa-envelope"></i> Message</th>            
            <th><i class="icon-color fa fa-check"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @(i + 1)
                </td>
                <td style="text-align:center">
                    @item.TriggerName
                </td>
                <td style="text-align:center">
                    @item.Message
                </td>                
                <td class="project-actions text-right">                  
                    <button class="btn btn-outline-success btn-sm" onclick="loadView('/Keywords/EditTrigger','Modal-xl','ModalxlContent','1')">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </button>
                    <button class="btn btn-outline-danger btn-sm" onclick="    hideView('Modal-xl'); loadView('/Keywords/DeleteTrigger', 'myModal', 'myModalContent', '1');">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </button>
                </td>
            </tr>
            i += 1;
        }
    </tbody>
    <tfoot>
        <tr>
            <th><i class="icon-color fa fa-sort-numeric-down"></i> #</th>
            <th><i class="icon-color fa fa-sort-alpha-down"></i> Name</th>
            <th><i class="icon-color fa fa-envelope"></i> Message</th>
            <th><i class="icon-color fa fa-check"></i> Actions</th>
        </tr>
    </tfoot>
</table>
<script>
    $(function() {

        $("#example2").DataTable({
            lengthMenu: [
                [10, 25, 50, 100, -1],
                [10, 25, 50, 100, 'All'],
            ],
            "responsive": true, "lengthChange": true, "autoWidth": false,
            "buttons": [
                {
                    extend: 'copy',
                    title: 'Triggers (Keyword)',
                    text: window.copyButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'csv',
                    title: 'Triggers (Keyword)',
                    text: window.csvButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'excel',
                    title: 'Triggers (Keyword)',
                    text: window.excelButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'pdf',
                    title: 'Triggers (Keyword)',
                    text: window.pdfButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'print',
                    title: 'Triggers (Keyword)',
                    text: window.printButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'colvis',
                    title: 'Triggers (Keyword)',
                    text: window.colvisButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
            ]
        }).buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');
    });
</script>