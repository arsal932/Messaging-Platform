<div class="modal-header">
    <h4 class="modal-title">New Trigger</h4>
    <button onclick="hideView('Modal-xl')" type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="CreateTrigger" method="post">
    <div class="modal-body">
        <div class="text-danger">@ViewBag.Message</div>
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-sort-alpha-down" style="color:#17a2b8"></i></span>
                            </div>
                            <input id="name" oninput="UpdateData()" asp-for="Name" type="text" class="form-control" required placeholder="Keyword Name" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-list" style="color:#17a2b8"></i></span>
                            </div>
                            <select class="form-control">
                                <option selected value="">Select Keyword</option>
                                <option value="">Subscribe</option>
                                <option value="">Unsubscribe</option>
                            </select>
                        </div>
                    </div>
                </div><hr />               
                <label>Auto Confirmation Message</label>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="input-group mb-3">
                            <textarea oninput="UpdateData()" id="confirmation_message" asp-for="Auto_Confirmation_Message" rows="3" cols="65"></textarea>
                        </div>
                    </div>
                </div><hr />               
                @* </div>*@<br />
            </div>
            <div class="col-sm-6">
                <center><h7>This is just for preview.</h7></center> 
                <div class="row">
                    <div class="col-sm-12">
                        <div class="smartphone">
                            <div class="content">
                                <div class="direct-chat-messages" style="height:100% ;">
                                     <div class="direct-chat-msg right">
                                        <div class="direct-chat-infos clearfix">
                                            <span class="direct-chat-name float-right">Customer</span>
                                            @*<span class="direct-chat-timestamp float-left">23 Jan 2:05 pm</span>*@
                                        </div>
                                        <!-- /.direct-chat-infos -->
                                        <!-- /.direct-chat-img -->
                                        <div id="to_name" class="direct-chat-text" style="background-color:#17a2b8;color:white;border-color:#17a2b8">                                            
                                        </div>
                                        <!-- /.direct-chat-text -->
                                    </div>
                                    <div class="direct-chat-msg">
                                        <div class="direct-chat-infos clearfix">
                                            <span class="direct-chat-name float-left">+12434344324</span>
                                            @*<span class="direct-chat-timestamp float-right">23 Jan 2:00 pm</span>*@
                                        </div>
                                        <!-- /.direct-chat-infos -->
                                        <!-- /.direct-chat-img -->
                                        <div id="to_confirmation_message" class="direct-chat-text">                                                                                        
                                        </div>
                                        <!-- /.direct-chat-text -->
                                    </div>                                                                            
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" onclick="hideView('Modal-xl')" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" onclick="hideView('Modal-xl')" class="btn btn-info"><i class="fa fa-plus"></i> Add</button>
    </div>
</form>
<script>
    $(document).ready(function() {        
        UpdateData();
    });
    function UpdateData()
    {        
        ChangeText('name','to_name');
        ChangeText('confirmation_message','to_confirmation_message');        
    }
    function ChangeText(from, to) {             
        document.getElementById(to).innerText = document.getElementById(from).value;
    }
</script>