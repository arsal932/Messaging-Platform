<div class="modal-header">
    <center><h4>Login</h4>    </center>
</div>

<div class="modal-body">
    <div class="text-danger">@ViewBag.Message</div>
    <div class="row">        
            <div class="col-sm-6">
                <form asp-action="Login" method="post">
                <center>
                    <img src="~/dist/img/message.png" height="70" width="70" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <h3 class="icon-color">Messaging Plateform</h3>
                </center><hr />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-envelope" style="color:#17a2b8"></i></span>
                            </div>
                            <input asp-for="Email" type="email" class="form-control" required placeholder="Email" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key" style="color:#17a2b8"></i></span>
                            </div>
                            <input asp-for="Password" type="password" class="form-control" required placeholder="Password" />
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="input-group mb-3 text-right">
                    <button type="submit" class="btn btn-info"><i class="fa fa-sign-in"></i> Login</button>
                </div>
                <a href="#"  onclick="loadView('/Account/SignUp','Modal-xl','ModalxlContent')">Don't have an account?</a>
                <a href="#" onclick="    hideView('Modal-xl');loadView('/Account/ForgotPassword','myModal','myModalContent')">Forgot password?</a>
                </div>                
                </form>
            </div>        
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-12">
                    <center><img src="~/dist/img/Mobile.PNG" height="300" width="200" /></center>                    
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer justify-content-between">
    @*<button type="button" onclick="hideView('Modal-xl')" class="btn btn-default" data-dismiss="modal">Close</button>*@

</div>

